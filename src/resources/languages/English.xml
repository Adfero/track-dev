<?xml version="1.0" ?>
<language>
    <!-- The name of this language -->
    <name>English</name>
    <!-- The abbreviation for this language -->
    <short>en</short>
    <!-- The author of this language file. -->
    <author>creatorfromhell</author>
    <!-- The version of this language file. -->
    <version>Beta 2</version>
    <!-- The symbol for this language. Located in the theme's image folder. -->
    <symbol>us.gif</symbol>

    <!-- Everything that can be translated to different languages is located below. -->
    <!-- Words starting with % are shortcuts that are replaced by the script before processing. Please do not translate
         any of the shortcuts. -->
    <site>
        <title>%project - Trackr</title>
        <header>%list - %project</header>
        <welcome>welcome %user</welcome>
        <loginmessage>login or register</loginmessage>
        <login>login</login>
        <register>register</register>
        <email>email</email>
        <username>username</username>
        <password>password</password>
        <confirm>confirm</confirm>
        <pages>
            <overview>
                <navlink>overview</navlink>
                <header>Overview</header>
                <calendar>
                    <navlink>calendar</navlink>
                    <header>Calendar - %project</header>
                </calendar>
                <project>
                    <navlink>project</navlink>
                    <header>Overview for %project</header>
                </project>
            </overview>
            <admin>
                <navlink>admin</navlink>
                <header>Administration Panel</header>
                <dashboard>dashboard</dashboard>
                <activity>activity</activity>
                <groups>groups</groups>
                <options>options</options>
                <themes>themes</themes>
                <users>users</users>
            </admin>
            <projects>
                <navlink>projects</navlink>
                <header>Project %project</header>
                <versiontype>versions</versiontype>
                <versiontypeheader>Version Types</versiontypeheader>
            </projects>
            <lists>
                <navlink>lists</navlink>
                <header>Lists for %project</header>
                <version>versions</version>
                <versionsheader>Versions for %project</versionsheader>
                <download>downloads</download>
                <downloadsheader>Downloads for %project</downloadsheader>
            </lists>
            <tasks>
                <labelsheader>Labels for %list - %project</labelsheader>
            </tasks>
        </pages>
        <tables>
            <head>
                <name>name</name>
                <archived>archived</archived>
                <activity>activity</activity>
                <logged>logged</logged>
                <assignee>assignee</assignee>
                <created>created</created>
                <creator>creator</creator>
                <author>author</author>
                <actions>actions</actions>
                <overseer>overseer</overseer>
                <permission>permission</permission>
                <short>short</short>
                <icon>icon</icon>
                <admin>admin</admin>
                <version>version</version>
                <email>email</email>
                <group>group</group>
                <type>type</type>
                <stable>stable</stable>
                <site>site</site>
                <size>size</size>
                <node>node</node>
                <description>description</description>
                <downloads>downloads</downloads>
                <registered>registered</registered>
            </head>
            <missing>
                <tasks>There are currently no tasks for %list.</tasks>
                <lists>There are currently no lists for %project.</lists>
                <projects>There are currently no projects.</projects>
                <versions>There are currently no versions for %project.</versions>
                <downloads>There are currently no downloads for %project.</downloads>
                <types>There are currently no version types.</types>
                <labels>There are currently no labels for %list.</labels>
                <activities>There are no recent activities.</activities>
                <groups>There are currently no user groups.</groups>
                <nodes>There are currently no permission nodes.</nodes>
                <users>There are currently no registered users,</users>
            </missing>
        </tables>
        <forms>
            <activation>An account activation link has been sent to the specified email address.</activation>
            <exists>
                <username>The specified username or email address is already in use!</username>
                <group>A group with that name already exists!</group>
                <project>A project with that name already exists!</project>
                <list>A list with that name already exists!</list>
                <type>A version type with that name already exists!</type>
                <version>A version with that name already exists!</version>
            </exists>
            <invalid>
                <id>You must enter a valid id!</id>
                <captcha>Invalid captcha entered!</captcha>
                <login>Invalid login credentials!</login>
                <passwords>Passwords do not match!</passwords>
                <list>The list specified does not exist!</list>
                <project>The project specified does not exist!</project>
                <status>Invalid status entered!</status>
            </invalid>
            <missing>
                <activation>You must activate your account before logging in!</activation>
                <password>No password entered!</password>
                <username>No username entered!</username>
                <email>No email address entered!</email>
                <confirm>You must confirm your password!</confirm>
                <permission>You must fill out the permission field!</permission>
                <admin>You must fill out the administrator field!</admin>
                <preset>You must fill out the preset field!</preset>
                <name>No name entered!</name>
                <mainlist>You must fill out the main list field!</mainlist>
                <author>Invalid author entered!</author>
                <overseer>Invalid overseer entered!</overseer>
                <public>You must fill out the public field!</public>
                <main>You must fill out the main field!</main>
                <project>You must enter a project for this list!</project>
                <minimal>You must fill out the minimal field!</minimal>
                <guestview>You must fill out the guest view field!</guestview>
                <guestedit>You must fill out the guest edit field!</guestedit>
                <viewperm>You must fill out the view permission field!</viewperm>
                <editperm>You must fill out the edit permission field!</editperm>
                <title>You must fill out the title field!</title>
                <description>You must enter a valid description</description>
                <editable>You must fill out the editable field!</editable>
                <group>You must enter a valid group!</group>
                <stable>Invalid stability entered!</stable>
                <node>You must enter a valid permission node!</node>
                <label>You must fill out the label field!</label>
                <textcolor>You must choose a text color!</textcolor>
                <backgroundcolor>You must choose a background color!</backgroundcolor>
            </missing>
        </forms>
        <actions>
            <!-- TODO: make actions language-based -->
            <general>
                <yes>yes</yes>
                <no>no</no>
                <none>none</none>
                <edit>edit</edit>
                <delete>delete</delete>
                <open>open</open>
                <done>done</done>
                <progress>in progress</progress>
                <close>close</close>
                <delconfirm>Do you really want to delete this forever?</delconfirm>
            </general>
            <project>
                <created>The project %name has been created!</created>
                <created>Edit successful!</created>
                <deleted>The project %name has been deleted!</deleted>
            </project>
            <list>
                <created>The list %name has been created!</created>
                <deleted>The list %name has been deleted!</deleted>
            </list>
            <label>
                <created>The label %name has been created!</created>
                <deleted>The label %name has been deleted!</deleted>
            </label>
            <task>
                <created>Task #%id has been created!</created>
                <deleted>Task #%id has been deleted!</deleted>
                <status>The status of task #%id has been changed to %status.</status>
            </task>
            <user>
                <register>Thanks for registering! You may now login.</register>
                <noregister>I'm sorry, but registration has been disabled.</noregister>
                <logout>You have been logged out successfully!</logout>
            </user>
        </actions>
        <activities>
            <activity>
                <backup>%user backed up the activity logs.</backup>
                <delete>%user deleted an activity.</delete>
                <archive>%user archived an activity.</archive>
                <unarchive>%user unarchived an activity.</unarchive>
            </activity>
            <general>
                <options>%user modified the site options.</options>
            </general>
            <group>
                <add>%user added a new group.</add>
                <edit>%user edited a group.</edit>
                <delete>%user deleted a group.</delete>
            </group>
            <label>
                <add>%user added a new label.</add>
                <edit>%user edited a label.</edit>
                <delete>%user deleted a label.</delete>
            </label>
            <language>
                <upload>%user uploaded a language.</upload>
                <edit>%user edited a language.</edit>
                <delete>%user deleted a language.</delete>
                <default>%user changed the default language to %name.</default>
            </language>
            <list>
                <add>%user added a new list.</add>
                <edit>%user edited a list.</edit>
                <delete>%user deleted a list.</delete>
            </list>
            <project>
                <add>%user added a new project.</add>
                <edit>%user edited a project.</edit>
                <delete>%user deleted a project.</delete>
            </project>
            <task>
                <add>%user created a new task.</add>
                <edit>%user edited a task.</edit>
                <status>%user changed the status of a task to %status.</status>
                <delete>%user deleted a task.</delete>
            </task>
            <theme>
                <upload>%user uploaded a theme.</upload>
                <edit>%user edited a theme.</edit>
                <delete>%user deleted a theme.</delete>
                <default>%user changed the default theme to %name.</default>
            </theme>
            <user>
                <login>%user logged in.</login>
                <logout>%user logged out.</logout>
                <register>%user just registered.</register>
                <add>%user added a new user.</add>
                <edit>%user edit a user.</edit>
                <delete>%user deleted a user.</delete>
            </user>
        </activities>
    </site>
    <email>
        <!-- TODO: Move emails to templates? -->
        <subject>Trackr Verification</subject>
        <verification>Welcome %user,\r\rYou, or someone using your email address, has completed registration for %url. You may complete your registration by clicking the following link: %activation\r\rIf this is an error you may ignore this email. \r\rSincerely, Website Administrator</verification>
    </email>
</language>